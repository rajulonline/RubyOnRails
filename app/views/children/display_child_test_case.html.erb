<%- model_class = Children -%>
<%= javascript_include_tag "application" %>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
	<dt>
		<strong><%= model_class.human_attribute_name(:agent) %>:</strong>
	</dt>
	<dd>
		<%= @children.agent %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:content) %>:</strong>
	</dt>
	<dd>
		<%= @children.content %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:status) %>:</strong>
	</dt>
	<dd>
		<%= @children.status %>
	</dd>
</dl>

<div class="form-actions">
	<%= link_to t('.back', :default => t("helpers.links.back")),
	posts_path, :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_post_path(@children), :class => 'btn' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	post_path(@children),
	:method => 'delete',
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-danger' %>
	<%= link_to 'Add Child Test Case',
	{ :controller=> 'children', :action => 'add_child_test_case', :post => @children}, :method => :post %>
</div>

<%= link_to 'Display all Child Test Cases',
{ :controller=> 'children', :action => 'display_all_child_test_cases'}%>

