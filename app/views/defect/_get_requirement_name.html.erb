<%- model_class = Defect -%>

<%if @requirement.present?%>
<%= label_tag :Mapping_Requirement, "Mapping_Requirement" %>
<%= select_tag 'defect[req_name]', options_for_select(@requirement.collect{ |u| [u.req_name] },@on_error_retain_req_name),:onchange=>"get_next_value($(this).val(),$(this).attr('name'))",:remote=>true, :prompt=> "please select"  %>
<%end%>
<%if @post.present?%>
<%= label_tag :Parent_testcase, "Parent_testcase" %>
<%= select("defect","parent_tc_id", @post.collect{ |u| [u.title,u.parent_tc_id] }, {include_blank: 'None'})  %>
<%end%>


