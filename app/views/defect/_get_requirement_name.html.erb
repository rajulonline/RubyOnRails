<%- model_class = Defect -%>
<%= form_for :defect do |f| %>
<%if @requirement.present?%>
<%= f.label :Mapping_Requirement, :class => 'control-label' %>
<%= select_tag 'defect[req_name]', options_for_select(@requirement.collect{ |u| [u.req_name] }),:onchange=>"get_next_value($(this).val(),$(this).attr('name'))",:remote=>true, :prompt=> "please select"  %>
<%end%>
<%if @post.present?%>
<%= f.label :Parent_testcase, :class => 'control-label' %>
<%= select("defect","parent_tc_id", @post.collect{ |u| [u.title,u.parent_tc_id] }, {include_blank: 'None'})  %>
<%end%>

<%end%>
