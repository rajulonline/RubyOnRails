<!DOCTYPE html>
<html>
	<head>
		<%= favicon_link_tag "/favicon.ico?1" %>
		<title>Test Case Management Tool</title>
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
		<![endif]-->
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag 'jquery-1.9.1','application' %>
	
		
		<%= csrf_meta_tags %>
		
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
					<a class="brand" href="#">Test Manager</a>
					<div class="nav-collapse">
						<ul class="nav">
							<li>
								<%= link_to "Test Case Manager Home", posts_path %>
							</li>
							<li>
								<%= link_to t('.genesis', :default => t("helpers.links.Genesis")),
								:controller=>'tools',:action=>'index' %>
							</li>
							<li>
								<%= link_to t('.New User', :default => t("helpers.links.Add New User")),
								:controller=>'login',:action=>'new' %>
							</li>
							<li>
								<%= link_to t('.Logout', :default => t("helpers.links.Logout")),
								:controller=>'tools',:action=>'index' %>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<% if flash[:notice] %>
<div id="notice", class="span">
	<%= flash[:notice] %>
</div>
<% end %>
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<%= yield %>
				</div>
				<div class="span3">
					<a href="javascript: history.go(-1)">Back</a>

				</div>
			</div>
		</div>
	</body>
</html>