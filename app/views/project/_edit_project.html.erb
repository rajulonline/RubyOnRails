<%= form_for :project , :url=> { :action=> "update_project" }, :html => { :class => 'form-horizontal' }, :remote => true do |f| %>

<!-- # Message Header -->
<%- model_class = Project -%>
<div class="page-header">
	<h1><%= t '.Edit Project', :model => model_class.model_name.human.titleize %></h1>
</div>

<%= f.error_messages :header_message => "Invalid fields!",
  :message => "You'll need to fix the following fields:",
  :header_tag => :h3 %>

<!-- # Progress bar -->

<div class="control-group">
      
    <%= f.label :Project_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name,:class => 'text_field',:value=>@project.name %>
    </div>
  </div>
   
 
  <div class="control-group">
      
    <%= f.label :Description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :rows=>5,:class => 'text_area' %>
    </div>
  </div>
 
 <%= hidden_field_tag('project[id]', value = @project.id) %>

		<div class="form-actions">
			<%= f.submit 'Update Projects' %>
			<%= button_to "Cancel",{:action=>'list_all_projects'},:class => 'btn btn-mini btn-danger' %>
		</div>
  
<% end %>
